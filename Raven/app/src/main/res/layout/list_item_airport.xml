<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/airportID"
	    android:layout_width="0dp"
	    android:layout_weight="2"
	    android:layout_height="match_parent"
	    android:paddingTop="@dimen/select_airport_list_item_padding"
	    android:paddingBottom="@dimen/select_airport_list_item_padding"
	    android:textStyle="bold"
		android:textSize="16sp"
		android:gravity="center_vertical"
		tools:text="KXXX"
        />
    <TextView android:id="@+id/airportName"
	    android:layout_width="0dp"
	    android:layout_weight="6"
	    android:layout_height="match_parent"
	    android:paddingTop="@dimen/select_airport_list_item_padding"
	    android:paddingBottom="@dimen/select_airport_list_item_padding"
		android:gravity="center_vertical"
		tools:text="Generic Airport Internaltional"
        />
    <TextView android:id="@+id/airportTZ"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:paddingTop="@dimen/select_airport_list_item_padding"
	    android:paddingBottom="@dimen/select_airport_list_item_padding"
		android:gravity="center_vertical"
		tools:text="P"
        />
</LinearLayout>
